@model BLL.Modals.Identity.Login
@{
    ViewData["Title"] = "Log in";
}
<div class="d-flex justify-content-center pt-4 login-form-page">
    <div class="login-box rounded-3" style="width:420px;">
        <div class="card rounded-3">
            <div class="card-body login-card-body px-0">
                <p class="login-box-msg text-center my-3 dark-color"><b style="font-size: 20px;">Login</b></p>
                <div class="px-4 mt-4">
                    <form id="account" method="post" class="form-horizontal" role="form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-floating">
                            <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" />
                            <label class="form-label">Username</label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-floating">
                            <input asp-for="Password" type="password" class="form-control eyes" autocomplete="current-password" aria-required="true" />
                            <label class="form-label">Password</label>
                            <span id="password-field" style="position:absolute;z-index:9999; top:25px;right:20px;" class="fa fa-fw fa-eye"></span>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="row px-3">
                            <div class="col-sm-6 p-0">
                                <div class="checkbox gray-color text-start">
                                    <input class="form-check-input" asp-for="RememberMe" />
                                    <label asp-for="RememberMe" class="form-label ps-3">
                                        Remember Me
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="input-group my-4">
                            <button type="submit" class="btn btn-primary my-3 rounded-3 p-2 w-100">
                                <span class="my-1">
                                    Login
                                </span>
                            </button>
                        </div>
                    </form>
                </div>
                <hr />
                <p class="mb-0 text-center py-1">
                    Don't Have Account
                    <a href="/Account/Register" class="text-center underline px-2">Register Now</a>
                </p>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $("#password-field").click(function () {
            $(this).toggleClass("fa-eye fa-eye-slash");
            if ($(".eyes").attr("type") == "password") {
                $(".eyes").attr("type", "text");
            } else {
                $(".eyes").attr("type", "password");
            }
        });

    </script>
}
